<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'books/list', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
<h4>Books</h4>

<table class="table table-hover rable-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @books.each do |book| %>

<tr>
<%= link_to user_path(@user.id) do %>
<td><%= image_tag book.user.get_profile_image(100,100) %></td>
<% end %>

<td><%= link_to book.title ,book_path(book.id) %></td>
<td><%= book.body %></td>
</tr>

<% end %>
</tbody>
</div>
</table>
</div>
</div>