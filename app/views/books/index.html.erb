<main>
<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
<div class="col-md-3">
<h2>User info</h2>

<% if @user.image.attached? %>
    <%= image_tag @user.image, size: "100x100" %>
<% else %>
    <%= image_tag 'no_image', size: "100x100" %>
<% end %>

<table class="table table-striped">
  <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
   </tr>
  </tbody>
</table>
</div>
</div>

<div class="row">
<%= link_to "edit", edit_user_path(@user.id) %>
</div>
</div>

<h2 class= "mt-3">New book</h2>
<%= form_with model:@book do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<div class="table table-hover rable-inverse">
<% @books.each do |list| %>

<p><%= image_tag book.user.get_profile_image(100,100) %></p>

<p>Title</p>
<span><%= book.title %></span>

<p>Opinion</p>
<span><%= book.opinion %></span>
<% end %>

</div>
</div>
</main>