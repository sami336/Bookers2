<p id="notice"></p>
  <div class="col-md-3">
   <h4>User info</h4>

<%= image_tag user.get_profile_image(100, 100) %>

<table class="table table">
  <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
   </tr>
  </tbody>
</table>

<%= link_to "edit", edit_user_path(user.id), class: "btn btn-secondary" %>


<h4 class= "mt-3">New book</h4>
<%= form_with model:book do |f| %>

 <div class="form-group">
 <h6>Title</h6>
 <%= f.text_field :title %>
 </div>

 <div class="form-group">
 <h6>Opinion</h6>
 <%= f.text_area :body %>
 </div>

 <div class="form-group">
 <%= f.submit 'Create Book' %>
 </div>
<% end %>

</div>
